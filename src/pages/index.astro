---
import "../tailwind.css"
import NavHeader from "../components/NavHeader.astro"
import Footer from "../components/Footer.astro"
import Whoami from "../components/Whoami.astro"
import PersonalUpdates from "../components/PersonalUpdates.astro"
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Favicon -->
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />

		<!-- Atkinson Hyperlegible -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Atkinson+Hyperlegible:ital,wght@0,400;0,700;1,400;1,700&display=swap">
		
		<!-- IBM mono -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap">

		<title>Cletus Igwe | whoami</title>
	</head>
	<body class="bg-black font-atkinson gap-3 grid grid-cols-12 p-2 md:p-3">
		<NavHeader/>
		<main class="col-start-1 col-span-full sm:col-start-3 md:col-span-9 lg:col-span-10 h-full min-h-[85vh] md:min-h-[90vh] rounded-sm text-white flex flex-col gap-5">
				<div class="*:bg-grey h-full overflow-y-scroll flex flex-col lg:grid lg:grid-cols-5 gap-3 *:p-2 *:md:p-5">
					<Whoami/>
					<PersonalUpdates/>
				</div>
		</main>
		<Footer/>
	</body>
</html>
